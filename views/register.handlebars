<main>

    <div class="container">
        <div class="row align-items-center vh-100">
            <div class="col-18 mx-auto">
                <div class="card shadow border">
                    <div class="card-body d-flex flex-column align-items-center">
                        <div class="register-page">
                            <form id="registration-form" method="POST" action="/register">

                                <!-- First name input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label firstName" for="firstName">Your First Name</label>


                                    <input type="text" id="firstName" name="firstName" class="form-control"
                                        placeholder="Enter first name">

                                    <div class="alert alert-danger div-text" role="alert" id="no-first-name" hidden>
                                        Please enter your First Name</div>

                                </div>

                                <!-- Last name input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label lastName" for="lastName">Your Last Name</label>

                                    <input type="text" id="lastName" name="lastName" class="form-control"
                                        placeholder="Enter last name">
                                    <div class="alert alert-danger div-text" role="alert" id="no-last-name" hidden>
                                        Please enter your Last Name</div>
                                </div>

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label emailId" for="emailId">Your Email</label>


                                    <input type="email" id="emailId" name="emailId" pattern=".+\.com"
                                        class="form-control" placeholder="Enter your Email">
                                    <div class="alert alert-danger div-text" role="alert" id="no-email" hidden>Please
                                        enter your Email</div>
                                    <div class="alert alert-danger div-text" role="alert" id="registered-email" hidden>
                                        Please enter your Email</div>
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label password" for="password">Your Password</label>


                                    <input type="password" id="password" name="password" class="form-control"
                                        placeholder="Enter your password">
                                    <div id="no-password" class="alert alert-danger div-text" role="alert" hidden>Please
                                        enter your password</div>

                                </div>

                                <!-- Address input -->
                             
                                     <div class="form-outline mb-4">
                                    <label class="form-label Address" for="Address">Your Address</label>


                                    <input type="text" id="Address" name="Address" class="form-control"
                                        placeholder="Enter Address">

                                    <div class="alert alert-danger div-text" role="alert" id="no-Address" hidden>
                                        Please enter your Address</div>

                                </div>



                                <!-- Phone input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label phoneNumber" for="phoneNumber">Your Phone No.</label>
                                    <input type="number" class="form-control" id="phoneNumber" name="phoneNumber"
                                        placeholder="Enter your phone number" />
                                    <div id="no-phone" class="alert alert-danger div-text" role="alert" hidden>Please
                                        enter your phone number
                                    </div>
                                </div>

                                <!-- Gender input -->
                                   <!-- Gender input -->
                                <div class="form-outline mb-4">
                                    <label class="form-label identity" for="identity">Are you a customer</label>
                                    <select class="custom-select" id="identity" name="identity" required>
                                        <option value="" selected disabled>Select your identity</option>
                                        <option value="customer">customer</option>
                                        <option value="employee">employee</option>
                                        {{!-- <option value="manager">manager</option> --}}
        
                                       
                                    </select>
                                    <div id="no-gender" class="alert alert-danger div-text" role="alert" hidden>Please
                                        select a identity</div>
                                </div>
                             
                                </div>

                              


                                
                                    <br>

                                    

                                </div>

                                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                    <button type="submit" class="btn btn-primary btn-lg"
                                        id="buttonregister">Register</button>
                                </div>

                            </form>

                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                <a href="/login">Already have an account? Click here to log-in</a>
                            </div>

                            {{#if hasErrors}}
                            <ul class="error-list">
                                {{#each errors}}
                                <li>
                                    {{this}}
                                </li>
                                {{/each}}
                            </ul>
                            {{/if}}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>