<main>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">

                <h1>Customer Project Request</h1>

                <form id="posts-form" method="POST" action="/cust/addCustProject">
                    <!-- Create Post Button-->
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">
                            Create Request
                        </button>
                    </div>

                </form>
            </div>
            {{#if hasErrors}}
            <ul id="error-list" class="error-list">
                {{#each errors}}
                <li>
                    {{this}}
                </li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
    </div>

</main>